<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<% }) %>
    </ul>
<% } %>


    <div id="loginContainer">
    <form id="add-classification" action="/inv/add-classification" method="post">
        <fieldset>
            <p>Name Must be Alphabetic Characters ONLY, cannot contain a space or special character of any kind</p>
            <label for="carClassification">New Classification Name: </label>
            
            <input type="text" name="classification_name" id="carClassification" required pattern="[a-zA-z]*" value="<%= locals.classification_name %>">
            
            <div id="loginBtn">
                <button type="submit" class="btn" value="Add">Add Classification</button>
            </div>
        </fieldset>
    </form>
</div>