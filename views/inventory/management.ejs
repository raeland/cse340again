<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<% }) %>
    </ul>
<% } %>

<div>
<ul class="boldList">
    <li>
        <a href="./add-classification"
        title="Click to add a new vehicle classification"
        >Add New Classification</a>
    </li>
    <li>
        <a href="./add-inventory"
        title="Click to add a new vehicle to inventory"
        >Add New Inventory</a>
    </li>
</ul>


<h2>Manage Inventory</h2>
<p>Select Classification</p>
<%- classificationSelect %>

<table id="inventoryDisplay"></table>
<noscript>JavaScript must be enabled to use this page</noscript>
</div>
